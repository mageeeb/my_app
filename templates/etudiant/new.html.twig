{% extends 'base.html.twig' %}

{% block title %}Ajouter un étudiant{% endblock %}

{% block body %}
    <h1 class="my-4">Ajouter un étudiant</h1>

    <div class="card shadow-sm">
        <div class="card-body">
            {{ form_start(form) }}
            <div class="row">
                {# Boucle pour rendre les champs du formulaire avec Bootstrap #}
                {% for field in form %}
                    <div class="mb-3 col-md-6">
                        {{ form_label(field, null, {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(field, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(field) }}
                    </div>
                {% endfor %}
            </div>
            <button class="btn btn-success mt-3">Enregistrer</button>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
